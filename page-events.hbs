{{!< default}}

<main class="site-main">
    <article class="single post">
        <header class="single-header gh-canvas">
            <h1 class="single-title">
                <span class="lang-en">Events</span>
                <span class="lang-fr">&Eacute;v&eacute;nements</span>
            </h1>
            <p class="single-subtitle">
                <span class="lang-en">Upcoming meetups, talks, and workshops</span>
                <span class="lang-fr">Rencontres, conf&eacute;rences et ateliers &agrave; venir</span>
            </p>
        </header>

        <div class="gh-outer">
            <div class="gh-inner">
                {{#if @custom.events_calendar_url}}
                <div class="calendar-embed">
                    <iframe src="{{@custom.events_calendar_url}}"
                            title="Events calendar"
                            width="100%"
                            height="600"
                            allowfullscreen
                            aria-hidden="false"
                            tabindex="0"></iframe>
                </div>
                {{/if}}
            </div>
        </div>
    </article>
</main>
