{{#get "posts" limit="5" filter="tags:[{{post.tags}}]+id:-{{post.id}}" as |related|}}
{{#if related}}
    <section class="related-wrapper gh-canvas">
        <h3 class="related-title">
            <span class="lang-en">You might also like...</span>
            <span class="lang-fr">Vous aimerez peut-&ecirc;tre aussi...</span>
        </h3>
        <div class="related-feed">
            {{#foreach posts}}
                {{> "loop"}}
            {{/foreach}}
        </div>
    </section>
{{/if}}
{{/get}}
